     <div class="body">
        <div class="timkiem">
            <h2>Danh sách thuốc</h2> <br>
            
                <form action="{{ path('app_danhsachthuoc')}}" method="post">
                    <h4>Tìm theo tên thuốc</h4>
                    <input type="text" name="TenThuoc" value="">

                    <div class="filter">
                    </div>
                    <br>
                    <input type="submit" value="Tìm kiếm" name="submit">
                </form> <br>
            <a href="themthuocmoi.php" title=""> <input type="submit" value="Thêm thuốc mới"> </a>

