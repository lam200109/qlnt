    <table class="table">
    <tr>
        <th class="table__heading">ID</th>
        <th class="table__heading">Tên Thuốc</th>
        <th class="table__heading">Loai</th>
        <th class="table__heading">Giá Bán</th>
        <th class="table__heading">Số Lượng Còn</th>
        <th class="table__heading">Thao Tác</th>
    </tr>

    {% if result is empty %}
        <tr>
            <td colspan="6">Không có dữ liệu.</td>
        </tr>
    {% else %}
        {% for row in result %}
            <tr class="table__row">
                <td>{{ row.IDThuoc }}</td>
                <td>{{ row.TenThuoc }}</td>
                <td>{{ row.ThanhPhan }}</td>
                <td>{{ row.GiaBan }}</td>
                <td>{{ row.SoLuong }}</td>
                <td class="table__content" data-heading="Jersey Number">
                    <input type="hidden" name="IDThuoc" value="{{ row.IDThuoc }}">
                    <input type="hidden" name="TenThuoc" value="{{ row.TenThuoc }}">

                    <td>
                        <form method="post" action="{{ path('app_danhsachthuoc_delete', {'id': row.IDThuoc}) }}">
                            <input type="hidden" name="IDThuoc" value="{{ row.IDThuoc }}">
                            <input type="hidden" name="TenThuoc" value="{{ row.TenThuoc }}">
                            <button type="submit" class="delete-btn">Xóa Thuốc</button>
                        </form>
                    </td>

                    <td>
                        <button type="submit" class="edit-btn" onclick="openModal({{ row.IDThuoc }})">Sửa Thuốc</button>
                    </td>

                    <td>
                        <form method="post" action="{{ path('app_danhsachthuoc_update', {'id': row.IDThuoc}) }}">
                            <div id="myModal-{{ row.IDThuoc }}" class="modal">
                                <div class="modal-content">
                                    <span class="close" onclick="closeModal({{ row.IDThuoc }})">&times;</span>
                                    <input type="hidden" name="IDThuoc" value="{{ row.IDThuoc }}">
                                    <div class="form-group">
                                        <label for="name">Tên Thuốc</label>
                                        <input type="text" name="TenThuoc" value="{{ row.TenThuoc }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Giá Bán</label>
                                        <input type="text" id="GiaBan-{{ row.IDThuoc }}" name="GiaBan" value="{{ row.GiaBan }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="total">Số lượng:</label>
                                        <input type="number" id="SoLuong-{{ row.IDThuoc }}" name="SoLuong" min="0" value="{{ row.SoLuong }}" required>
                                    </div>
                                    <input type="submit" value="submit">
                                </div>
                            </div>
                        </form>
                    </td>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
