<script>
    function exportToExcel(tableId) {
        var table = document.getElementById(tableId);
        if (!table) {
            console.error(`Element with id "${tableId}" not found in DOM`);
            return;
        }
        var wb = XLSX.utils.table_to_book(table, { sheet: "Sheet1" });
        return XLSX.writeFile(wb, 'lichsugiaodich.xlsx');
    }
</script>



