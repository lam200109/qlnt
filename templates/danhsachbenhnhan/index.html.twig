     <div class="body">
        <div class="timkiem">
            <h2>Danh sách bệnh nhân</h2> <br>
            
                <form method="post">
                    <h4>Tìm theo tên bệnh nhân</h4> <br>
                    <input type="text" name="HoTen" value="" placeholder="Nhập tên bệnh nhân"> <br>
                    <input type="submit" name="submit" value="Tìm kiếm">
                </form>

            <div class="filter">

            </div>
        </div>

        <section>
  <!--for demo wrap-->
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Họ tên</th>
          <th>Địa Chỉ</th>
          <th>Số Điện thoại</th>
          <th>Ghi chú</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">


 <table cellpadding="0" cellspacing="0" border="0">   
     
   <tbody>

 {% if searchedPatients is not empty %}
      {% for patient in searchedPatients %}
        <tr>
          <td> {{ patient.IDBN }} </td>
          <td> {{ patient.HoTen }} </td>
          <td> {{ patient.DiaChi }} </td>
          <td> {{ patient.SoDienThoai }} </td>
          <td> {{ patient.GhiChu }}</td>
        </tr>

     {% endfor %}
    {% else %}
      {% for patient in allPatients %}
    
        <tr>
          <td>{{ patient.IDBN }}</td>
          <td>{{ patient.HoTen }}</td>
          <td>{{ patient.DiaChi }}</td>
          <td>{{ patient.SoDienThoai }}</td>
          <td> {{ patient.GhiChu }} </td>
        </tr>

              {% endfor %}
    {% endif %}

      </tbody>

  </header>
