{% extends 'basecustomer.html.twig' %}

{% block title %}
  Chi tiết thuốc
{% endblock %}

{% block body %}

  <div class="nk-content">
    <div class="container-fluid">
      <div class="nk-content-inner">
        <div class="nk-content-body">
          <div class="nk-block-head">
            <div class="nk-block-head-content">
              <a href="{{ path('khach_hang_dat_thuoc') }}" class="btn btn-outline-light bg-white d-none d-sm-inline-flex"><em class="icon ni ni-arrow-left"></em><span>Back</span></a><a href="/demo7/invoice-list.html" class="btn btn-icon btn-outline-light bg-white d-inline-flex d-sm-none"><em class="icon ni ni-arrow-left"></em></a>
            </div>
          </div>
        </div>

        <div class="nk-block">
          <div class="invoice">
            <div class="invoice-action">
              <a class="btn btn-icon btn-lg btn-white btn-dim btn-outline-primary" href="/demo7/invoice-print.html" target="_blank"><em class="icon ni ni-printer-fill"></em></a>
            </div>
            <div class="invoice-wrap">
              <div class="invoice-brand text-center">
                <img src="/demo7/images/logo-dark.png" srcset="/demo7/images/logo-dark2x.png 2x" alt="" />
              </div>
              <div class="invoice-head">
                <div class="invoice-contact">
                  <span class="overline-title">Invoice To</span>
                  <div class="invoice-contact-info">
                    <h4 class="title">{{ data1[0]['Name'] }}</h4>
                    <ul class="list-plain">
                      <li>
                        <em class="icon ni ni-map-pin-fill"></em><span>{{ data1[0]['Address'] }}</span>
                      </li>
                      <li>
                        <em class="icon ni ni-call-fill"></em><span>{{ data1[0]['Phone'] }}</span>
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="invoice-desc">
                  <h3 class="title">Invoice</h3>
                  <ul class="list-plain">
                    <li class="invoice-id">
                      <span>Invoice ID</span>:<span>{{ data[0]['SalesInvoiceID'] }}</span>
                    </li>
                    <li class="invoice-date">
                      <span>Date</span>:<span>{{ data[0]['SalesInvoiceID']|date('d M Y') }}</span>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="invoice-bills">
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th class="w-150px">Item ID</th>
                        <th class="w-60">Description</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Amount</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for item in data %}
                        <tr>
                          <td>{{ item['MedicineID'] }}</td>
                          <td>{{ item['Name'] }}</td>
                          <td>{{ item['Price']|number_format(2, '.', ',')|replace({ '.00': '' }) }} VNĐ</td>

                          <td>{{ item['Quantity'] }}</td>
                          <td>{{ (item['Price'] * item['Quantity'])|number_format(2, '.', ',')|replace({ '.00': '' }) }} VNĐ</td>
                        </tr>
                      {% endfor %}
                    </tbody>
                    <tfoot>
                      <tr>
                        <td colspan="2"></td>
                        <td colspan="2">Grand Total</td>
                        <td>{{ data[0]['Amount']|number_format(2, '.', ',')|replace({ '.00': '' }) }} VNĐ</td>
                      </tr>
                    </tfoot>
                  </table>
                  <div class="nk-notes ff-italic fs-12px text-soft">Invoice was created on a computer and is valid without the signature and seal.</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
