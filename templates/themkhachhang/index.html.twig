                      <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Hình ảnh</th>

                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng còn</th>

                            <th scope="col">Hàm lượng</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Hành động</th>
                          </tr>
                        </thead>
                        <tbody id="medicineTable">
                          {% for medicine in result %}
