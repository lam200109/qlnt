<script>
// Sử dụng hàm addNotification để thêm thông báo
function addNotification(iconClass, message, time) {
    // Tạo phần tử thông báo
    var notificationItem = document.createElement('div');
    notificationItem.className = 'nk-notification-item dropdown-inner';
    notificationItem.innerHTML = `
        <div class='nk-notification-icon'>
            <em class='${iconClass}'></em>
        </div>
        <div class='nk-notification-content'>
            <div class='nk-notification-text'>
                ${message}
            </div>
            <div class='nk-notification-time'>${time}</div>
        </div>
    `;

    // Thêm vào danh sách thông báo
    var notificationList = document.getElementById('notification-list');
    notificationList.appendChild(notificationItem);
}

// Sử dụng hàm addNotification để thêm thông báo với thời gian độ trễ
function addNotificationWithDelay(iconClass, message, hoursDelay) {
    // Tính toán thời gian hiển thị dựa trên giờ truyền vào
    var displayTime = moment().add(hoursDelay, 'hours').format('h:mm A');

    // Gọi hàm addNotification với thời gian tính được
    addNotification(iconClass, message, displayTime);
}

