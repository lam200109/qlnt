                                        </div>
                                        <div class="form-control-wrap">
                                            <a tabindex="-1" href="#" class="form-icon form-icon-right passcode-switch lg" data-target="password">
                                                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                                                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                                            </a>
                                            <input autocomplete="new-password" type="password" class="form-control form-control-lg" required id="Password" name="Password" placeholder="Nhập mật khẩu">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block" onclick="window.location.href='{{ path('cham_cong') }}'">Đăng nhập</button>
                            </div>
                            


                                </form>
                                


                                 <div class="form-note-s2 pt-4">
