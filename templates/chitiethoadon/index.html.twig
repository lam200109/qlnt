{% extends 'base.html.twig' %}

{% block title %}Chi tiết hoá đơn{% endblock %}

{% block body %}
<div>
    <h2>SQL Query:</h2>
    <pre>{{ sqlQuery }} {{ dump(result) }}
    </pre>
</div>
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head">
                    <h3 class="nk-block-title page-title">
                        Hoá đơn <strong class="text-primary small">
                            {% if result is iterable and result[0] is defined %}
                                {# Kiểm tra nếu là hoá đơn từ bảng nguồn thu #}
                                {% if 'PurchaseInvoiceID' in result[0] %}
                                    #{{ result[0].PurchaseInvoiceID }}
                                {% else %}
                                    {# Trong trường hợp không có PurchaseInvoiceID, sử dụng SalesInvoiceID #}
                                    {% if 'SalesInvoiceID' in result[0] %}
                                        #{{ result[0].SalesInvoiceID }}
                                    {% else %}
                                        {# Trong trường hợp không có cả hai PurchaseInvoiceID và SalesInvoiceID, hiển thị "N/A" #}
                                        #N/A
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                {# Trong trường hợp không có dữ liệu, hiển thị "N/A" #}
                                #N/A
                            {% endif %}
                        </strong>
                    </h3>
                    <div class="nk-block-des text-soft">
                        <ul class="list-inline">
                            <li>
                                Tạo lúc: <span class="text-base">{{ result[0].CreatedDate|date('d M, Y h:i A') }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="nk-block">
                    <div class="invoice">
                        <div class="invoice-action">
                            <a class="btn btn-icon btn-lg btn-white btn-dim btn-outline-primary" href="/demo7/pharmacy/invoice-print.html" target="_blank">
                                <em class="icon ni ni-printer-fill"></em>
                            </a>
                        </div>
                        <div class="invoice-wrap">
                            <div class="invoice-brand text-center">
                                <img src="/demo7/images/logo-dark.png" srcset="/demo7/images/logo-dark2x.png 2x" alt="">
                            </div>
                            <div class="invoice-head">
                                <div class="invoice-contact">
                                    <span class="overline-title">Invoice To</span>
                                    <div class="invoice-contact-info">
                                        <h4 class="title">{{ result[0].Name }}</h4>
                                        <ul class="list-plain">
                                            <li>
                                                <em class="icon ni ni-map-pin-fill"></em>
                                                <span> Address</span>
                                            </li>
                                            <li>
                                                <em class="icon ni ni-call-fill"></em>
                                                <span> Phone </span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="invoice-desc">
                                    <h3 class="title">Invoice</h3>
                                    <ul class="list-plain">
                                        <li class="invoice-id">
                                            <span>Invoice ID</span>
                                            :<span>{{ result[0].PurchaseInvoiceID ?? result[0].SalesInvoiceID }}</span>
                                        </li>
                                        <li class="invoice-date">
                                            <span>Date</span>
                                            :<span>{{ result[0].Date|date('d M, Y') }}</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="invoice-bills">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th class="w-150px">ID sản phẩm</th>
                                                <th class="w-60">Mô tả</th>
                                                <th>Giá</th>
                                                <th>Số lượng</th>
                                                <th>Tổng tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for row in result %}
                                                <tr>
                                                    <td>{{ row.MedicineID is not null ? row.MedicineID : '' }}</td>
                                                    <td>{{ row.Description is not null ? row.Description : '' }}</td>
                                                    <td>{{ row.Price is not null ? row.Price : '' }}</td>
                                                    <td>{{ row.Quantity is not null ? row.Quantity : '' }}</td>
                                                    <td>{{ row.Total is not null ? row.Total : '' }}</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                        
                                        
                                        <tfoot>
                                            <tr>
                                                <td colspan="2"></td>
                                                <td colspan="2">Subtotal</td>
                                                <td> total </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"></td>
                                                <td colspan="2">Processing fee</td>
                                                <td> Processing fee </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"></td>
                                                <td colspan="2">TAX</td>
                                                <td> TAX </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"></td>
                                                <td colspan="2">Grand Total</td>
                                                <td> {{ result[0].Amount }} </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <div class="nk-notes ff-italic fs-12px text-soft">Invoice was created on a computer and is valid without the signature and seal. </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
